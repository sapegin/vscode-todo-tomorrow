{
  "name": "todo-tomorrow",
  "displayName": "Todo Tomorrow",
  "description": "Highlights TODO, HACK, FIXME, etc. comments",
  "keywords": [
    "todo",
    "fixme",
    "hack",
    "highlight",
    "keyword",
    "annotation",
    "comment"
  ],
  "version": "0.0.0",
  "publisher": "sapegin",
  "license": "MIT",
  "icon": "images/icon.png",
  "homepage": "https://github.com/sapegin/vscode-todo-tomorrow",
  "repository": {
    "type": "git",
    "url": "https://github.com/sapegin/vscode-todo-tomorrow.git"
  },
  "bugs": {
    "url": "https://github.com/sapegin/vscode-todo-tomorrow/issues"
  },
  "sponsor": {
    "url": "https://www.buymeacoffee.com/sapegin"
  },
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:markdown"
  ],
  "main": "out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Todo Tomorrow",
      "properties": {
        "todoTomorrow.patterns": {
          "type": "array",
          "description": "Groups of patterns",
          "items": {
            "type": "object",
            "properties": {
              "keywords": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Keyword, for example `todo` (case insensitive)"
                }
              },
              "color": {
                "type": "string",
                "description": "Text color"
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color"
              },
              "fontWeight": {
                "type": "string",
                "description": "Font weight, for example `bold`"
              }
            }
          },
          "default": [
            {
              "keywords": [
                "todo",
                "@todo"
              ],
              "fontWeight": "bold"
            },
            {
              "keywords": [
                "fixme",
                "fix",
                "xxx",
                "bug",
                "ugly",
                "debug",
                "hack",
                "@fixme",
                "@fix",
                "@xxx",
                "@bug",
                "@ugly",
                "@debug",
                "@hack"
              ],
              "fontWeight": "bold",
              "light": {
                "color": "#4c4b4e"
              },
              "dark": {
                "color": "#dcd5c0"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "rm -rf out && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "watch": "npm run esbuild-watch",
    "lint": "eslint . --ext .js,.ts,.tsx --cache --fix",
    "format": "prettier --log-level warn --write \"**/*.{js,ts,tsx,md}\"",
    "pretest": "npm run esbuild-base",
    "posttest": "npm run format",
    "test": "tsc --noEmit",
    "publish": "vsce publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.1",
    "@types/node": "^6.0.40",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/vsce": "^2.9.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-tamia": "^8.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
